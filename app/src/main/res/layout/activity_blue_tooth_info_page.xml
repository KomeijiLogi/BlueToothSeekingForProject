<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/page_bg3"
    tools:context="com.example.administrator.bluetoothseekingforproject.BlueToothTransMissionPage">
    <ProgressBar
        android:id="@+id/pb_transmission_bluetoothinfo"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="20"
        android:max="100"
        android:secondaryProgress="60"
        android:layout_width="match_parent"
        android:layout_height="100sp" />
    <Button
        android:id="@+id/bt_transmission_bluetoothinfo"
        android:background="#355eff"
        android:text="传输文件"
        android:textColor="#ffe7e2"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
