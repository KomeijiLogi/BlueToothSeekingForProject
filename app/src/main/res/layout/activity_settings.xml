<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.bluetoothseekingforproject.Settings"
    android:background="@drawable/page_bg3">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout">
        <TextView
            android:text="本机蓝牙名称:"
            android:textColor="#355eff"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="30sp" />
        <TextView
            android:id="@+id/txt_settings_btname"
            android:hint="我的蓝牙名称"
            android:textColor="#252734"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="30sp" />
        <TextView
            android:layout_marginTop="10sp"
            android:text="本机蓝牙地址:"
            android:textColor="#355eff"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="30sp" />
        <TextView
            android:id="@+id/txt_settings_btaddress"
            android:hint="我的蓝牙地址"
            android:textColor="#252734"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="30sp" />
        <TextView
            android:layout_marginTop="10sp"
            android:text="本机可见性"
            android:textColor="#355eff"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="30sp" />
        <TextView
            android:id="@+id/txt_settings_bttime"
            android:hint="我的蓝牙倒计时"
            android:textColor="#252734"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="30sp" />

        <Button
            android:layout_marginTop="40sp"
            android:id="@+id/bt_settings_checkversion"
            android:textSize="20sp"
            android:text="检测新版本"
            android:textColor="#fff"
            android:background="#355eff"
            android:gravity="center"
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="103dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:background="#252734"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="120sp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/bluetoothbutton_settings"
                    android:background="@drawable/bluetoothbutton"
                    android:layout_width="60sp"
                    android:layout_height="51sp" />
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="60sp"
                    android:layout_height="29sp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:text="蓝牙" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="120sp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/morebutton_settings"
                    android:background="@drawable/morebutton"
                    android:layout_width="60sp"
                    android:layout_height="51sp" />
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="60sp"
                    android:layout_height="29sp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:text="更多" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="120sp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/settingsbutton_settings"
                    android:background="@drawable/settingsbutton"
                    android:layout_width="60sp"
                    android:layout_height="51sp" />
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="60sp"
                    android:layout_height="29sp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:text="设置" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
