<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/page_bg4"
    tools:context="com.example.administrator.bluetoothseekingforproject.CheckVersion">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100sp">
        <TextView
            android:layout_margin="20sp"
            android:textSize="20sp"
            android:text="当前版本号："
            android:layout_weight="0.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_showversion_old"
            android:hint="当前版本号"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100sp">
        <TextView
            android:layout_margin="20sp"
            android:textSize="20sp"
            android:text="最新版本号："
            android:layout_weight="0.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="20sp"
            android:id="@+id/txt_showversion_new"
            android:textSize="20sp"
            android:hint="最新版本号"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp">
    </LinearLayout>
    <Button
        android:id="@+id/bt_checkversion"
        android:text="更新版本"
        android:textColor="#ffe7e2"
        android:background="#355eff"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
